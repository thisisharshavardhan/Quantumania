{
  "name": "quantumania",
  "version": "1.0.0",
  "description": "A Dashboard to display all the live/publicly available quantum computers of IBM",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "start:dev": "NODE_ENV=development node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "test": "node test.js",
    "test:watch": "nodemon test.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl -s http://localhost:3849/health | jq",
    "build": "echo 'No build step required for Node.js backend'",
    "prestart": "node -e \"console.log('Starting Quantumania Backend in production mode...')\"",
    "poststart": "echo 'Backend started successfully'",
    "stop": "pkill -f 'node src/index.js'",
    "restart": "npm run stop && npm start",
    "docker:build": "docker build -t quantumania-backend .",
    "docker:run": "docker run -p 3849:3849 --env-file .env quantumania-backend",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs quantumania-backend"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.1.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.10",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  }
}
